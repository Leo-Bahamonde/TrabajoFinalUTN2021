<div class="container">
    {{!-- fila1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}!!</span>
                <a href="/admin/login/logout" class="btn btn-danger"><i class="fas fa-sing-out-alt">cerrar sesion</i></a>
            </p>
        </div>
    </div>
 {{!-- fin fila1 --}}

  {{!-- fila2 --}}
  <div class="row">
      <div class="col-6" style="margin-top: 9px;">
          <h2>listado de novedades</h2>
      </div>
      <div class="col-2 text-end">
          <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"> Nuevo</i></a>
      </div>
      <div class="col-4 text-right">
    <form class="d-flex" action="/admin/novedades" method="get">
           <input class="form-control me-2" type="search" placeholder="Escriba aqui" name="q" {{#if q}} value={{q}} {{/if}} aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
      </form>
</div>
  </div>
  {{!-- fin fila1 --}}

  {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cuerpo</th>
                        <th scope="col" class="text-end">acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{{subtitulo}}}</td>
                        <td>{{{cuerpo}}}</td>
                            <td class="text-end">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>                           
                            </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless novedades.length}}
                    no se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
            {{/if}}
        </div>
        </div>


</div>
