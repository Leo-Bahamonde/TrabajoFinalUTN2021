   <div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                 <div class="form-group m-4 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <label for="">Titulo</label> 
                    <input type="text" class="form-control" name="titulo" 
                    value="{{novedad.titulo}}">               
                </div>

                 <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
                       <label>imagen: 
                           <input type="file" name="imagen" id="imagen"/>
                       </label>
                       <label>
                           <input type="checkbox" name="img_delete" id="img_delete" value="1"/>
                             Elimenar imagen actual?
                       </label>
                       <input type="hidden" name="img_original" value="{{novedad.img_id}}">    
                </div>
                
                <div class="form-group m-4 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <label for="">Precio</label> 
                    <input type="text" class="form-control" 
                    name="subtitulo" value="{{novedad.subtitulo}}">                 
                </div>
               
                <div class="form-group m-4 col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <label for="">cuerpo</label> 
                    <textarea name="cuerpo" class="form-control" cols="30" rows="10">{{novedad.cuerpo}}</textarea>            
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>        
            </form>
            {{#if error}}
                <p>{{message}}</p> 
            {{/if}} 
        </div>
    </div>
</div>  
    












